@model IEnumerable<THAITHIHOANGTHO_2080601444.Models.Course> 
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul>
        @foreach(var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span>
                            @course.Lecturer.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
    </ul>
</div>